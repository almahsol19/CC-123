#include <iostream>
#include <string>

using namespace std;

int main() {
    int balance = 5000;
    string pin = "2005";
    string Mypin;
    int choice;
    int amount;
    const int limit = 50000;

    while (true) { // diri nga loopings sir nag balikÂ² ni siyag ask sa correct nga PIN hangtud ma correct 
        cout << "Enter PIN: ";
        cin >> Mypin;
        if (Mypin == pin) break;
        cout << "Incorrect PIN.\n";
    }

    cout << "Welcome!\n";
    do { //diri sir e display niya una ang kaning menu driven nako then proceed dayun sa switch case nako
        cout << "\nSelect an option:\n";
        cout << "1. Check Balance\n";
        cout << "2. Withdraw\n";
        cout << "3. Deposit\n";
        cout << "4. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1:
                cout << "Your balance is: P" << balance << endl;
                break;
            case 2:
                cout << "Enter withdrawal amount: P";
                cin >> amount;
                if (amount > 0 && amount <= balance) {
                    balance -= amount;
                    cout << "Withdrawal successful. New balance: P" << balance << endl;
                } else {
                    cout << "Insufficient funds or invalid amount." << endl;
                }
                break;
            case 3:
                cout << "Enter deposit amount: P";
                cin >> amount;
                if (amount > 0 && amount <= limit) {
                    balance += amount;
                    cout << "Deposit successful. New balance: P" << balance << endl;
                } else {
                    cout << "Deposit failed. Amount only P" << limit << " limit or is invalid." << endl;
                }
                break;
            case 4:
                cout << "Thank you!\n";
                break;
            default:
                cout << "Invalid choice.\n";
        }
    } while (choice != 4);

    return 0;
}
