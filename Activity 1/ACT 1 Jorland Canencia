#include<stdio.h>

int main() {

int InputNumber; //Variable for use input or storage for the inputs.
     
    
    while (1) { // loop that if the input is greater than or less than the 100 number is automatically loops for asking the correct input.
    printf("Guess the number (1-100)\n");
    printf("Input a number: ");
    scanf("%d", &InputNumber);  // inputs for user.
    
    
    
    if (InputNumber > 100) { // data structure for condition that if the input is grater than the correct number is automatically print the assigned output.
    printf("You're number is too high!\n please try again\n\n");
    }
    
    else if (InputNumber < 100) { 
    printf("You're number is too low!\n please try again\n\n");
    }
    
    else {
    printf("\n\nCongrats you guess the number 100!\n"); // it prints the assigned output if the user guessed the correct number.
    break; // for stop looping after user guessed the correct number 100.
    }
    
    }
    return 0;
}
