#include <stdio.h>

//Main function 

int main() {
   int number;
   
   printf("Enter a number: ");
 
 //Try to read if it is a valid number
 if (scanf("%d", &number) != 1) {
  // If input is not a number print the message
   printf("Please input a valid number!\n");
   
 } else {
  // If input is a valid number continue with conditions
        if (number > 50) {
            printf("The number is high\n");
        } else if (number < 50) {
            printf("The number is low\n");
        } else {
            printf("The number is exactly 50\n");
        }
    }

    return 0;
}
