#include <stdio.h>
#include <string.h>

void name() {
    char name[] = "rj rio";
    int space = 1; // Space for staircase
    
    for (int i = 0; i < strlen(name); i++) { 
        printf("%c\n", name[i]); 
        
        for (int j = 0; j < space; j++) { // Space for staircase effect
            printf("  ");
        }
        space++;    
    }
}

void printLetter(char letter[5][6], int spaces) {  
    for (int row = 0; row < 5; row++) {  
        for (int col = 0; col < spaces; col++) {  
            printf(" ");  
        }
        printf("%s\n", letter[row]);  
    }
}

int main() {  
    char R[5][6] = { "**** ", "*   *", "**** ", "*  * ", "*   *" };  
    char J[5][6] = { " ***", "   *", "   *", "*  *", "****" };  
    char I[5][6] = { "*****", "  *  ", "  *  ", "  *  ", "*****" };  
    char O[5][6] = { "*****", "*   *", "*   *", "*   *", "*****" };  

    name();
    
    printf("\n\n");
    printLetter(R, 0);
    printf("\n");
    printLetter(J, 3);
    printf("\n");
    printLetter(R, 6);
    printf("\n");
    printLetter(I, 9);
    printf("\n");
    printLetter(O, 12);
    printf("\n");

    return 0;
}

