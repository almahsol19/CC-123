#include <stdio.h>

void printC(int spaces) { //Use for printing the C
    for (int row= 0; row < 5; row++) {
        for (int col= 0; col < spaces; col++) {
            printf(" "); // Add spaces for the Floyds Triangle
        }
        if (row == 0 || row == 4) {
            printf("*****\n");
        } else {
            printf("*\n");
        }
    }
}

void printO(int spaces) { // Use for printing the O 
    for (int row= 0; row < 5; row++) { 
        for (int col= 0; col < spaces; col++) {
            printf(" "); // Add spaces for the staircase effect
        }
        if (row== 0 || row == 4) { //Printing the Pattern
            printf("*****\n");
        } else {
            printf("*   *\n");
        }
    }
}

void printR(int spaces) {
    for (int row= 0; row< 5; row++) {
        for (int col= 0; col < spaces; col++) {
            printf(" "); // This is where spaces got printed 
        }
        if ( row== 0) { // this block of codes print out the pattern of R
            printf("*****\n");  
        } else if (row== 1) {
            printf("*   *\n");  
        } else if (row == 2) {
            printf("*****\n");  
        } else if (row == 3) {
            printf("*  *\n");  
        } else {
            printf("*    *  \n");  
        }
    }
}

void printCORR() { 
// Calling all the functions that have made to print.
//
    
    printC(0);  
    printf("\n");
// The Inside of the parenthesis in each funtions are indicators of how many spaces to print

    printO(5);  
    printf("\n");

    printR(10);  
    printf("\n");
    
    printR(15);  
    printf("\n");
}

int main() {
    printCORR(); //calling the function to call the within functions of the function to print the called functions.
}
