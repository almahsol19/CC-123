#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void number(int secret_number) { //this is the "guessing game" takes place, it compares the input of the user to the random number generated by the program
    int guess2;
    
    do {
        printf("Enter your guess: ");
        scanf("%d", &guess2);
        
        if (guess2 < 1 || guess2 > 100) {  
            printf("Invalid input! Please enter a number between 1 and 100.\n");
        } else if (guess2 < secret_number) {
            printf("OHHH NOOO!!! It's too low! Try again.\n");
        } else if (guess2 > secret_number) {
            printf("UGHHH, Too high! Try again.\n");
        } else {
            printf("OMGGGG!!! Congratulations! You got it righttt!!!\n");
        }
    } while (guess2 != secret_number);
}

int main() {
    int secret_number;

    srand(time(0)); // generates a random number
    
    secret_number = rand() % 100 + 1; //  gives scope to the random number (generate a random number between 1-100 only)

    printf("GUESS THE NUMBER GAMEEEEE!\n");
    printf("Guess the number between 1 and 100.\n");
    
    number(secret_number);

    return 0;
}
