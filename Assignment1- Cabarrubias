#include <stdio.h>

void printC(int spaces) {
    for (int i = 0; i < spaces; i++) printf("  ");
    printf(" *****\n");
    for (int i = 0; i < spaces; i++) printf("  ");
    printf("*\n");
    for (int i = 0; i < spaces; i++) printf("  ");
    printf("*\n");
    for (int i = 0; i < spaces; i++) printf("  ");
    printf(" *****\n");
}

void printA(int spaces) {
    for (int i = 0; i < spaces; i++) printf("  ");
    printf("  *  \n");
    for (int i = 0; i < spaces; i++) printf("  ");
    printf(" * * \n");
    for (int i = 0; i < spaces; i++) printf("  ");
    printf("*****\n");
    for (int i = 0; i < spaces; i++) printf("  ");
    printf("*   *\n");
}

void printB(int spaces) {
    for (int i = 0; i < spaces; i++) printf("  ");
    printf("**** \n");
    for (int i = 0; i < spaces; i++) printf("  ");
    printf("*   *\n");
    for (int i = 0; i < spaces; i++) printf("  ");
    printf("**** \n");
    for (int i = 0; i < spaces; i++) printf("  ");
    printf("*   *\n");
    for (int i = 0; i < spaces; i++) printf("  ");
    printf("**** \n");
}

void printStaircase() {
    char name[] = "CABA";
    int length = 4;
    
    for (int i = 0; i < length; i++) {
        switch (name[i]) {
            case 'C': printC(i); break;
            case 'A': printA(i); break;
            case 'B': printB(i); break;
        }
    }
}

int main() {
    printStaircase();
    return 0;
}
