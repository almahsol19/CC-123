#include <iostream>

using namespace std;

int main() {
    int pin = 1234, enteredPin, choice, recipientAccount, attemp = 0;
    double balance = 10000.0, amount;

    // Loop for PIN entry
    while (true) {
        cout << "Enter PIN: ";
        cin >> enteredPin;

        if (enteredPin == pin) {
            break; // Correct PIN entered, exit loop
        } 
        
        else {
            cout << "Incorrect PIN.\n\n";
            attemp ++;
        }
        
        if ( attemp == 5 ){
            cout << "Log in error, Exiting...";
            return 0;
        } 
    }

    // Transaction menu loop
    while (true) {
        cout << "\nTransaction Menu:\n";
        cout << "1. Withdraw\n";
        cout << "2. Check Balance\n";
        cout << "3. Transfer Money\n";
        cout << "0. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        if (choice == 0) {
            cout << "Processing File Handling...\n"; // Placeholder for file handling
            cout << "Exiting... Thank you!\n";
            break;
        }

        switch (choice) {
            case 1: // Withdraw
                cout << "Enter amount to withdraw: ";
                cin >> amount;
                if (amount > 0 && amount <= balance) {
                    balance -= amount;
                    cout << "Withdrawal successful.\n";
                } else {
                    cout << "Invalid amount or insufficient balance.\n";
                }
                break;

            case 2: // Check balance
                cout << "Your current balance: â‚± " << balance << endl;
                break;

            case 3: // Transfer Money
                cout << "Enter recipient account number: ";
                cin >> recipientAccount;
                cout << "Enter amount to transfer: ";
                cin >> amount;
                if (amount > 0 && amount <= balance) {
                    balance -= amount;
                    cout << "Transfer successful.\n";
                } else {
                    cout << "Invalid amount or insufficient balance.\n";
                }
                break;

            default:
                cout << "Invalid choice. Please try again.\n";
        }
    }

    return 0;
}
