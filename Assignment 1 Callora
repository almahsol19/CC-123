#include <stdio.h>

void print_letter(char letter, int offset) {
    int row, col, space;

    for (row = 1; row <= 5; row++) {
        for (space = 1; space <= offset; space++) {
            printf(" ");
        }

        switch (letter) {
            case 'C':
                for (col = 1; col <= 5; col++) {
                    if (col == 1 || row == 1 || row == 5) {
                        printf("* ");
                    } else {
                        printf("  ");
                    }
                }
                break;

            case 'A':
                for (col = 1; col <= 5; col++) {
                    if (col == 1 || col == 5 || row == 1 || row == 3) {
                        printf("* ");
                    } else {
                        printf("  ");
                    }
                }
                break;

            case 'L':
                for (col = 1; col <= 5; col++) {
                    if (col == 1 || row == 5) {
                        printf("* ");
                    } else {
                        printf("  ");
                    }
                }
                break;

            case 'U':
                for (col = 1; col <= 5; col++) {
                    if (col == 1 || col == 5 || row == 5) {
                        printf("* ");
                    } else {
                        printf("  ");
                    }
                }
                break;
        }

        printf("\n");
    }

    printf("\n");
}

int main() {
    print_letter('C', 0);
    print_letter('A', 6);
    print_letter('L', 12);
    print_letter('L', 18);

    return 0;
}
