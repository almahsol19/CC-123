#include <stdio.h>

void printLetter(char letter, int space) {
    int row, column;
    
    for (row = 1;row <= 5; row++) {
        for (int spaces = 0; spaces < space; spaces++) {
        printf(" ");
        }
        switch (letter) {
            case 'C': 
            for (column = 1;column <= 5; column++) {
            if (column == 1 || row == 1 || row == 5)
            printf("*");
            else
            printf(" ");
            }
            break;

            case 'O': 
            for (column = 1; column <= 5; column++) {
            if (row == 1 || row == 5 || column == 1 || column == 5)
            printf("*");
            else
            printf(" ");
            }
            break;

            case 'R': 
            for (column = 1;column <= 5; column++) {
            if (column == 1 || row == 1 || row == 3 || (column == 5 && row < 4) || (row >= 4 && column == row))
            printf("*");
            else
            printf(" ");
            }
            break;
        }
        printf("\n");
    }
    printf("\n");
}
int main() {
    char name[] = "CORRO";
    int space = 0;

    for (int index = 0; name[index] != '\0'; index++) {
        printLetter(name[index], space);
        space += 6; 
    }
    return 0;
}
