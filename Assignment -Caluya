#include <stdio.h>

void print_char_with_indent(char ch, int indent) {
    for (int i = 0; i < 5; i++) {
        // Print leading spaces for indentation
        for (int s = 0; s < indent; s++) {
            printf(" ");
        }
        
        // Print the character pattern
        for (int j = 0; j < 5; j++) {
            if ((ch == 'C' && (j == 0 || (i == 0 && j > 0) || (i == 4 && j > 0))) ||
                (ch == 'A' && (j == 0 || j == 4 || (i == 2 && j > 0 && j < 4) || (i == 0 && j > 0 && j < 4))) ||
                (ch == 'L' && (j == 0 || (i == 4 && j > 0))) ||
                (ch == 'U' && (j == 0 || j == 4 || (i == 4 && j > 0 && j < 4))) ||
                (ch == 'Y' && ((i < 3 && (j == i || j == 4 - i)) || (i >= 3 && j == 2)))) {
                printf("*");
            } else {
                printf(" ");
            }
        }
        printf("\n");
    }
    printf("\n"); // Space between letters
}

int main() {
    char word[] = "CALUYA";
    int num_chars = sizeof(word) - 1; 

    for (int i = 0; i < num_chars; i++) {
        print_char_with_indent(word[i], i * 5);
    }

    return 0;
}
